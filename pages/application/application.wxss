/*  内容  */
.wrapper{
    position: relative;
    padding-bottom: 40rpx;
    padding-top: 20rpx;
}

movable-area{
    height: 280rpx;
    width: 100vw;
}

movable-area movable-view{
    height: fit-content;
    width: fit-content;
}

.receipt-card{
    position: relative;
    display:flex;
    flex-direction: row;
}

.content-wrapper{
    width: calc(100vw - 80rpx);
    display:flex;
    flex-direction: column;
    margin: 0 20rpx;
    padding: 20rpx 20rpx;
    background-color: #ffffff;
    border-radius: 12rpx;
    /*box-shadow: 10px 10px 10px #999999;*/
}
.content-wrapper .card-title{
    font-size: 32rpx;
    margin-bottom: 10rpx;
    display: flex;
    align-items: center;
}
.content-wrapper .card-title .title{
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
    /*width: 90%;*/
}

.content-wrapper .card-title .th{
    min-width: 100rpx;
}
.content-wrapper .card-title .th text{
    font-size: 22rpx;
    padding: 5rpx 10rpx 5rpx 10rpx;
    border-radius: 5rpx;
}
.content-wrapper .card-title .iconfont{
    flex: 1;
    text-align: right;
    right: 10rpx;
}

.content-wrapper .card-text{
    font-size: 26rpx;
    margin-top: 20rpx;
    display: flex;
}
.content-wrapper .card-text .th{
    min-width: 130rpx;
    color: #999999;
}
.content-wrapper .card-text .tag{
    padding: 5rpx 10rpx 5rpx 10rpx;
    border-radius: 5rpx;
}
