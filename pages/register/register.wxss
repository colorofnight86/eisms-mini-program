/* pages/register/register.wxss */
.container{
    background:#f2f2f2;
    min-height: 100%;
}

.wrapper{
    position: relative;
    z-index: 90;
    padding-bottom: 40rpx;
}

.left-top-content{
    font-size: 120rpx;
    color: #e0e0e0;
    position: relative;
}

.input-content{
    padding: 0 80rpx;

}

.input-item{
    align-self: center;
    display:flex;
    flex-direction: row;
    padding: 20rpx 20rpx;
}

.input-item input{
    margin-left: 30rpx;
    font-size: 28rpx;
    background-color: #f8f6fa;
    border-radius: 6rpx;
}

.input-item picker{
    margin-left: 30rpx;
    font-size: 28rpx;
    background-color: #f8f6fa;
    border-radius: 6rpx;
}


radio {
    margin-left: 30rpx;
    transform: scale(0.5);
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    border: 2rpx solid #666; /* 设置边框（外圆） */
    font-size: 0; /* 让边框重合 */
}

.confirm-btn{
    font-weight: bold;
    position: relative;
    color: #f8f8f8;
    width: 75%;
    margin-top: 40rpx;
    top: 40rpx;
    font-size: 32rpx;
    border-radius: 50rpx;
}
.confirm-btn.register{
    background-color: #333333;
}
.confirm-btn.back{
    background-color: #787878;
}

