/* pages/receiptInfo/receiptInfo.wxss */

.container{
    background:#f2f2f2;
    min-height: 100%;
}

.wrapper{
    position: relative;
    z-index: 90;
    padding-bottom: 40rpx;
}

.left-top-content{
    font-size: 120rpx;
    color: #e0e0e0;
    position: relative;
}

.input-content{
    padding: 0 80rpx;
}
.input-content picker{
    margin-left: 30rpx;
}

.input-item{
    align-self: center;
    display:flex;
    flex-direction: row;
    padding: 20rpx 20rpx;
}

.input-item input{
    margin-left: 30rpx;
    font-size: 28rpx;
    background-color: #f8f6fa;
    border-radius: 6rpx;
}

.confirm-btn{
    font-weight: bold;
    position: relative;
    color: #f8f8f8;
    width: 75%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    top: 40rpx;
    font-size: 32rpx;
    border-radius: 50rpx;
}
.confirm-btn.revise{
    background-color: #333333;
}
.confirm-btn.back{
    background-color: #787878;
}
